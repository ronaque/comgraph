<RT3>
    <lookat look_from="4 5.6 -7" look_at="0 0 0" up="0 1 0" />
    <camera type="perspective" fovy="35" />
    <integrator type="blinn_phong" depth="2" />
    <!-- Objects storage -->
    <aggregator type="list"/>

    <!-- <film type="image" w_res="1920" h_res="1080" filename="teapot.png" img_type="png" gamma_corrected="false" /> -->
    <film type="image" w_res="1920" h_res="1080" filename="cube.png" img_type="png" gamma_corrected="false" />

    <!-- The Scene -->
    <world_begin/>
        <!-- The Background -->
        <background type="4_colors" bl="153 204 255" tl="18 10 143" tr="18 10 143" br="153 204 255" />
        <!-- <background type="4_colors" bl="0.6 0.8 1" tl="0.04 0.04 0.04" tr="0.04 0.04 0.04" br="0.6 0.8 1" /> -->

        <!-- Lights -->
        <light_source type="directional" I="0.9 0.6 0.5" scale="0.8 0.8 1" from="-8 9 -7" to="0 0 0" />
        <light_source type="directional" I="0.9 0.9 0.9" scale="1 1 1" from=" 2 3 -2" to="0 0 0" />

        <!-- Material Library -->
        <make_named_material type="blinn" name="gold"     ambient="0.4 0.4 0.4" diffuse ="1 0.65 0.0"     specular ="0.8 0.6 0.2" mirror ="0.1 0.1 0.1" glossiness ="128"/>
        <make_named_material type="blinn" name="grey"     ambient="0.1 0.1 0.1" diffuse ="0.8 0.8 0.8"    specular ="0 0 0"       mirror ="0.1 0.1 0.1" glossiness ="0"/>

        <!-- Objects -->
        <object type="trianglemesh" name="gold" filename="../scenes/objects/cube.obj" compute_normals="false" reverse_vertex_order="false" backface_cull_on="true"/>

        <named_material name="grey"/>
        <object type="trianglemesh"
                ntriangles ="2"
                vertices="-9 -1.005 5  9 -1.005 5  9 -1.005 -5  -9 -1.005 -5"
                indices ="0 1 2   0 2 3"
                normals ="0 1 0  0 1 0"
                normal_indices ="0 0 0  0 0 0"
                reverse_vertex_order="false"
                backface_cull_on ="true"/>
    <world_end/>
</RT3>